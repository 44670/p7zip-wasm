
OPTFLAGS=-O2

ALLFLAGS=${OPTFLAGS} -pipe -s \
    	-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	-DNDEBUG -D_REENTRANT -DENV_UNIX \
	-D_7ZIP_LARGE_PAGES \
	$(LOCAL_FLAGS)

CXX=gcc $(ALLFLAGS)
CC=gcc $(ALLFLAGS)
LINK_SHARED=-shared
ASM=nasm -f elf

LOCAL_LIBS=-lpthread
LOCAL_LIBS_DLL=$(LOCAL_LIBS) -ldl

CPU=x86
OBJ_CRC32=$(OBJ_CRC32_x86)

